{
  "name": "client",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:icon": "node scripts/build-icon.js",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder --publish never",
    "electron:build:mac": "npm run build && electron-builder --mac --publish never",
    "electron:build:win": "npm run build && electron-builder --win --x64 --arm64 --publish never"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.0",
    "electron-updater": "^6.7.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "socket.io-client": "^4.7.5",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.0.1",
    "electron": "33.2.0",
    "electron-builder": "^25.1.8",
    "png-to-ico": "^3.0.1",
    "png2icons": "^2.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.emax.message",
    "productName": "EMAX",
    "electronVersion": "33.2.0",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "emax-project",
        "repo": "MESSAGE"
      }
    ],
    "files": [
      "dist/**",
      "electron/**",
      "build/icons/**"
    ],
    "mac": {
      "category": "public.app-category.social",
      "target": [
        "dmg"
      ],
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
